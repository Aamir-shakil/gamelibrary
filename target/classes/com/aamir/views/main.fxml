<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.aamir.controllers.mainController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <Text text="Aamir's Game Library" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <TableView fx:id="gameTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Title" />
                <TableColumn fx:id="genreColumn" prefWidth="84.0" text="Genre" />
                <TableColumn fx:id="platformColumn" prefWidth="74.0" text="Platform" />
                <TableColumn fx:id="developerColumn" text="Developer" />
                <TableColumn fx:id="yearColumn" prefWidth="86.0" text="Release Year" />
            </columns>
            <BorderPane.margin>
                <Insets top="10.0" bottom="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>

    <right>
        <VBox spacing="5.0" alignment="TOP_LEFT" BorderPane.alignment="CENTER">
            <children>
                <Label text="Add Game" />
                <TextField fx:id="titleField" promptText="Title" />
                <TextField fx:id="genreField" promptText="Genre" />
                <TextField fx:id="platformField" promptText="Platform" />
                <TextField fx:id="developerField" promptText="Developer" />
                <TextField fx:id="yearField" promptText="Release Year" />
                <ChoiceBox fx:id="gameTypeChoice" prefWidth="150.0" />
                <TextField fx:id="progressField" promptText="Progress (SP)" />
                <TextField fx:id="winsField" promptText="Wins (MP)" />
                <TextField fx:id="lossesField" promptText="Losses (MP)" />
                <Button text="Add Game" onAction="#handleAddGame" />
            </children>
            <padding>
                <Insets top="10.0" right="10.0" />
            </padding>
        </VBox>
    </right>

    <left>
        <VBox spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Search Library" />
                <TextField fx:id="searchField" promptText="Search input" />
                <Button text="Search" />
            </children>
            <padding>
                <Insets left="10.0" />
            </padding>
        </VBox>
    </left>

    <bottom>
        <VBox spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Progress Tracker" />
                <TextField fx:id="progressField" promptText="Progress input (SP)" />
                <Button fx:id="updateButton" text="Update Progress" />
            </children>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </VBox>
    </bottom>
    <bottom>
    <VBox spacing="5.0" BorderPane.alignment="CENTER">
        <children>
            <Label text="Progress Tracker" />
            <TextField fx:id="progressField" promptText="Progress input (SP)" />
            <Button fx:id="updateButton" text="Update Progress" />

            <!-- NEW: Review Section -->
            <Label text="Rate and Review Game" />
            <ChoiceBox fx:id="ratingChoice" prefWidth="150.0" />
            <TextArea fx:id="reviewArea" promptText="Write your review here..." prefRowCount="3" prefWidth="400" />
            <Button fx:id="submitReviewButton" text="Submit Review" onAction="#handleSubmitReview" />
        </children>
        <padding>
            <Insets bottom="10.0" />
        </padding>
    </VBox>
</bottom>
</BorderPane>
